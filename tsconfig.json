{
  "compilerOptions": {
    "module": "ESNext",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": { "@frontend/*": ["../wayer/*"] },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Ensure interoperability between CommonJS and ES Modules
    "moduleResolution": "node" // Helps with resolving module imports
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"]
}
